    <dict>
        <key>Hour</key>
        <integer>8</integer>
        <key>Minute</key>
        <integer>0</integer>
    </dict>

    <key>StandardOutPath</key>
    <string>/Users/veggie/Desktop/batch_system/TimesheetTool/logs/timesheet.log</string>

    <key>StandardErrorPath</key>
    <string>/Users/veggie/Desktop/batch_system/TimesheetTool/logs/timesheet.error.log</string>
</dict>
</plist>
